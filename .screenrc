# Turn welcome message off
startup_message off

# Turn off visual bell
vbell off

# Start at window 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

# Use 256 colors
term term screen-256color

# Status bar
#hardstatus off
#hardstatus alwayslastline
hardstatus on
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W} %c %{g}]'

# Scroll back size
defscrollback 10000


# Be Emacs friend

# Control-^ (usually Control-Shift-6) is traditional and the only key not used by emacs
escape ^^^^

# do not trash BackSpace, usually DEL
bindkey -k kb
bindkey -d -k kb

# do not trash Delete, usually ESC [ 3 ~
bindkey -k kD
bindkey -d -k kD

# Set C-o as the command key
escape ^Oo
